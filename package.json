{
  "name": "bacds",
  "version": "1.0.0",
  "description": "Bitcoin-Addressed Content Delivery System (BACDS) - Revolutionary decentralized content delivery using Bitcoin addresses as network endpoints. Foundation for BitStream and BitNet Infrastructure products on the BitNet network.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "api": "node src/api-server.js",
    "test-api": "curl -s http://127.0.0.1:3001/api/status",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "bitcoin",
    "bacds",
    "content-delivery",
    "bitnet",
    "p2p",
    "p2p-network",
    "bitstream",
    "decentralized"
  ],
  "author": "BACDS Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1"
  },
  "build": {
    "appId": "com.bacds.desktop",
    "productName": "BACDS Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
